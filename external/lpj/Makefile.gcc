CC	= gcc
CFLAGS  = -g  -O3 -Wall  -DSAFE  -DUSE_CPP -DUSE_UNAME -DUSE_RAND48 
O	= o
A	= a
E	=
AR	= ar
ARFLAGS	= r 
RM	= rm 
RMFLAGS	= -f
LIBS	= -lm 
LINK	= cc
MKDIR	= mkdir -p
LNOPTS	= $(CFLAGS) -o 
